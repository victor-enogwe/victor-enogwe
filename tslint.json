{
    "extends": [
        "tslint-config-standard",
        "tslint-etc",
        "tslint-react"
    ],
    "rules": {
        "arrow-return-shorthand": true,
        "callable-types": true,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "deprecation": {
            "severity": "warn"
        },
        "eofline": true,
        "forin": true,
        "import-blacklist": [
            true,
            "rxjs/Rx",
            "rxjs/operators"
        ],
        "import-spacing": true,
        "ter-indent": [
            true,
            2
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-over-type-literal": true,
        "label-position": true,
        "max-line-length": [
            true,
            140
        ],
        "member-access": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [
            true,
            "debug",
            "log",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-empty": false,
        "no-empty-interface": true,
        "no-eval": true,
        "no-inferrable-types": [
            true,
            "ignore-params"
        ],
        "no-misused-new": true,
        "no-non-null-assertion": true,
        "no-shadowed-variable": true,
        "no-string-literal": false,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-initializer": true,
        "no-unused-expression": true,
        "no-duplicate-imports": true,
        "semicolon": false,
        "no-use-before-declare": true,
        "no-duplicate-variable": [
            true,
            "check-parameters"
        ],
        "no-var-keyword": true,
        "object-literal-sort-keys": false,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "prefer-const": true,
        "radix": true,
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "unified-signatures": true,
        "variable-name": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "throw-error": {
            "severity": "error"
        },
        "no-const-enum": {
            "options": [
                {
                    "allowLocal": true
                }
            ],
            "severity": "error"
        },
        "no-unused-declaration": {
            "options": [
                {
                    "declarations": true,
                    "imports": true
                }
            ],
            "severity": "error"
        },
        "no-unsafe-callback-scope": true,
        "no-assign-mutated-array": true,
        "completed-docs": [
            true,
            "enums",
            "functions",
            "methods"
        ],
        "prefer-for-of": true,
        "only-arrow-functions": [
            true,
            "allow-named-functions"
        ],
        "prefer-switch": true,
        "align": [
            true
        ],
        "no-unnecessary-type-assertion": true,
        "no-unnecessary-callback-wrapper": true,
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape",
            "avoid-template"
        ]
    },
    "jsRules": true,
    "linterOptions": {}
}
